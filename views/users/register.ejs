<% layout('layouts/boilerplate') %>
<div class="top ui one column stackable center aligned page grid">
  <div class="column twelve wide">

    <h1>Register</h1>

    <form action="/yelpcamp/auth/register" method="POST" class="validated-form" novalidate>



      <div class="form-group">
        <input class="form-control" type="text" placeholder="Username" name="username" required>
      </div>

      <div class="form-group">
        <input class="form-control" type="text" placeholder="Email" name="email" required>
      </div>

      <div class="form-group">
        <input class="form-control" type="password" placeholder="Password" name="password" required>
      </div>

      <div class="ui one column stackable center aligned page grid">
        <div class="column six wide">
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Register</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<button class="btn btn-lrg btn-success" onclick=window.location.href="/yelpcamp/campgrounds">Homepage</button>