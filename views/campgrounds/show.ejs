<% layout('layouts/boilerplate') %>



<div class="top row">
  <div class="col-6 offset-3">
    
    <div class="card">
      <img class="card-img-top" src="https://via.placeholder.com/400" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title%></h5>
        <p class="card-text"><%=campground.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item tetx-muted"><%= campground.location%></li>
        <li class="list-group-item">$<%=campground.price%> night</li>
        <li class="list-group-item">Vestibulum at eros</li>
      </ul>
      <div class="card-body">
          <button class="btn btn-warning" onclick=window.location.href="/yelpcamp/campgrounds/<%= campground._id %>/edit">Edit</button>
      </div>
    </div>
    <div class="card-footer text-muted">
      Added 10 days ago
    </div>

    <h2>Leave a Review</h2>
    <form action="" class="mb-3">
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class="form-control" name="review[body]" id="review" cols="30" rows="3"></textarea>

      </div>
      <button class="btn btn-primary">Submit</button>
    </form>

    

  </div>
</div>


