<% layout('layouts/boilerplate') %>

<div class="ui one column stackable center aligned page grid">
    <div class="column twelve wide">
    <h2>Add a Campground</h2>
    <div class="form">

      <form action="/yelpcamp/campgrounds" method="POST">

        <div class="form-group">
          <input class="form-control" type="text" placeholder="Name" name="campground[title]">
        </div>
        
        <div class="form-group">
          <input class="form-control" type="text" placeholder="City and State" name="campground[location]">
        </div>

        <div class="form-group">
          <input class="form-control" type="number" placeholder="Price" name="campground[price]" min="0.01" step="0.01">
        </div>

        <div class="form-group">
          <input class="form-control" type="text" placeholder="Image url" name="campground[image]">
        </div>

        <div class="form-group">
          <input class="form-control" type="text" placeholder="Description" name="campground[description]">
        </div>

        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button> 
        </div>

      </form>
    </div>
    
  </div>
</div>
<button onclick=window.location.href="/yelpcamp/campgrounds">Go Back</button>

